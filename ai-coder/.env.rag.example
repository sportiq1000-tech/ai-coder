# RAG Configuration - Copy to .env and fill in values

# ===================
# Vector Store (Qdrant)
# ===================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_TIMEOUT=30

# ===================
# Graph Store (Neo4j)
# ===================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# ===================
# Embedding (OpenAI)
# ===================
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# ===================
# Chunking
# ===================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=50

# ===================
# Processing
# ===================
MAX_FILE_SIZE_MB=10
SUPPORTED_LANGUAGES=python,javascript,typescript,java,cpp,csharp
EXCLUDE_PATTERNS=*.pyc,__pycache__,node_modules,.git,*.min.js

# ===================
# Performance
# ===================
PROCESSING_WORKERS=4
CACHE_EMBEDDINGS=true
CACHE_TTL=3600

# ===================
# Quality
# ===================
MIN_RELEVANCE_SCORE=0.7
MAX_CHUNKS_PER_QUERY=10

# ===================
# Production Deployment (Render.com)
# ===================
# For production, use cloud-hosted services:
# QDRANT_URL=https://your-cluster.cloud.qdrant.io
# NEO4J_URI=bolt://your-cluster.databases.neo4j.io